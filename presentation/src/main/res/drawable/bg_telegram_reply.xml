<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#19ffffff" />
            <corners
                android:topLeftRadius="@dimen/corner_radius_half"
                android:bottomLeftRadius="@dimen/corner_radius_half"
                android:topRightRadius="@dimen/corner_radius_half"
                android:bottomRightRadius="@dimen/corner_radius_half"
                 />
        </shape>
    </item>

    <item android:gravity="start">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#65a64a" />
            <corners android:topLeftRadius="@dimen/corner_radius_common"
                android:bottomLeftRadius="@dimen/corner_radius_common"/>
            <size android:width="@dimen/corner_radius_half"/>
        </shape>
    </item>
</layer-list>