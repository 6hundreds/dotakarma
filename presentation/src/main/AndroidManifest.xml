<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smedialink.tokenplussteamid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DotaKarma"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".features.homescreen.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".features.authsuccess.AuthSuccessActivity">
            <intent-filter android:label="filter_view_http_gizmos">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmosâ€ -->
                <data
                    android:host="auth_success"
                    android:scheme="dotakarma" />
                <!-- note that the leading "/" is required for pathPrefix-->
            </intent-filter>

        </activity>

    </application>
</manifest>
